    <script>
        // BLOKADA PRAWEM KLIKNIƒòCIA (KOPIOWANIA)
        document.addEventListener('contextmenu', e => e.preventDefault());

        // --- TWOJE FUNKCJE (SCROLLOWANIE, FILTROWANIE) ---
        function znajdzIPrzewin(id) {
            var d = new Date(); d.setDate(d.getDate() + 1); 
            var tom = d.toISOString().slice(0, 10);
            var sel = (id && id !== 'all') ? '#' + id + ' .app-card' : '.app-card';
            var cards = document.querySelectorAll(sel);
            for (var i = 0; i < cards.length; i++) {
                // Wa≈ºne: sprawdzamy offsetParent, ≈ºeby pominƒÖƒá ukryte karty
                if (cards[i].offsetParent === null) continue;
                if (cards[i].getAttribute('data-d') >= tom) {
                    cards[i].scrollIntoView({ behavior: 'smooth', block: 'center' });
                    cards[i].style.border = '1px solid #2ecc71';
                    break;
                }
            }
        }

        function filtruj() {
            var v = document.getElementById('sel').value;
            var b = document.getElementsByClassName('rb');
            for (var i = 0; i < b.length; i++) b[i].style.display = (v === 'all' || b[i].id === v) ? 'block' : 'none';
            setTimeout(() => znajdzIPrzewin(v), 100);
        }

        window.onscroll = function() { 
            document.getElementById('floating-back').style.display = (document.documentElement.scrollTop > 300) ? 'block' : 'none'; 
        };


        // --- LOGOWANIE GOOGLE ---
        
        // üëáüëáüëá TU WKLEJ SW√ìJ LINK SKRYPTU üëáüëáüëá
        const SCRIPT_URL = "https://script.google.com/macros/s/AKfycbyZpOGEBxDi04qBXgaKzdpHRBDh6ZKq_HzHrWn5-gK4Nv-idYCnphKLucaUohjsiPmO/exec"; 

        function checkPass() {
            const p = document.getElementById("passInput").value;
            const btn = document.getElementById("btnLog");
            const msg = document.getElementById("msgLog");

            if(!p) return;
            btn.innerText = "SPRAWDZAM...";
            btn.disabled = true;
            msg.innerText = "";

            fetch(SCRIPT_URL + "?pass=" + encodeURIComponent(p))
              .then(r => r.json())
              .then(data => {
                 if (data.error) throw new Error("B≈Çƒôdne has≈Ço!");
                 
                 // HAS≈ÅO OK -> ODKRYWAMY TRE≈öƒÜ
                 document.getElementById("login-overlay").style.display = "none";
                 document.getElementById("protected-content").style.display = "block";
                 
                 // Uruchamiamy Twoje funkcje dopiero TERAZ (gdy tre≈õƒá jest widoczna)
                 znajdzIPrzewin('all');
              })
              .catch(err => {
                 btn.innerText = "ODBLOKUJ";
                 btn.disabled = false;
                 msg.innerText = "‚õî B≈Çƒôdne has≈Ço.";
              });
        }
    </script>

